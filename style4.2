body {
  font-family: Arial, sans-serif;
  background-color: #eef2f3;
  margin: 0;
  padding: 0;
}

.container {
  max-width: 1000px;
  margin: 40px auto;
  background: #fff;
  padding: 30px;
  border-radius: 8px;
  box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
}

h1 {
  text-align: center;
  color: #222;
}

#search {
  width: 100%;
  padding: 12px;
  margin: 20px 0;
  border: 1px solid #aaa;
  border-radius: 5px;
  font-size: 16px;
}

.schedule-item {
  border-bottom: 1px solid #ddd;
  padding: 15px 0;
}

.schedule-item:last-child {
  border: none;
}

.schedule-item h3 {
  margin: 0;
  color: #0056b3;
}

.schedule-item p {
  margin: 5px 0;
  color: #555;
}
