body {
  font-family: 'Segoe UI', sans-serif;
  margin: 0;
  padding: 0;
  background-color: #f7f7f7;
  color: #222;
  transition: 0.3s ease;
}

.dark-mode {
  background-color: #1e1e1e;
  color: #e0e0e0;
}

header {
  background-color: #0057a3;
  color: white;
  padding: 1.5rem;
  text-align: center;
  position: relative;
}

header button {
  position: absolute;
  top: 1rem;
  right: 1rem;
  background-color: #003f75;
  color: white;
  border: none;
  padding: 0.6rem 1rem;
  cursor: pointer;
  border-radius: 5px;
}

.search-section {
  padding: 1rem;
  text-align: center;
}

#searchInput {
  width: 60%;
  padding: 0.8rem;
  font-size: 1rem;
}

.grid-container {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
  gap: 1.5rem;
  padding: 2rem;
}

.subject-card {
  background-color: white;
  padding: 1rem;
  border-radius: 10px;
  box-shadow: 0 2px 8px rgba(0,0,0,0.1);
  transition: transform 0.3s;
}

.dark-mode .subject-card {
  background-color: #2a2a2a;
}

.subject-card:hover {
  transform: translateY(-5px);
}

.subject-card h3 {
  margin-top: 0;
}

.subject-card ul {
  padding-left: 1rem;
}

.subject-card a {
  text-decoration: none;
  color: #0057a3;
}

.subject-card a:hover {
  text-decoration: underline;
}

footer {
  text-align: center;
  padding: 1rem;
  background-color: #003f75;
  color: white;
}

/* Modal */
.modal {
  display: none;
  position: fixed;
  z-index: 9999;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.7);
}

.modal-content {
  background-color: white;
  margin: 10% auto;
  padding: 2rem;
  width: 90%;
  max-width: 600px;
  border-radius: 10px;
  position: relative;
}

.modal-content iframe {
  width: 100%;
  height: 315px;
}

.close {
  position: absolute;
  right: 15px;
  top: 10px;
  font-size: 24px;
  cursor: pointer;
}
